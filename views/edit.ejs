<%- include("./partials/header") %>
<nav class="navbar navbar-light">
  <a class="navbar-brand" href="/">📋 Todo App</a>
</nav>

<div class="container mt-5">
  <h2 class="text-center mb-4">Edit Your Task ✍️</h2>
  <form action="/edit/todo/<%= todo._id %>" method="POST" class="w-50 mx-auto">
    <div class="mb-3">
      <input type="text" name="todo" class="form-control" value="<%= todo.todo %>" required>
    </div>
    <div class="d-flex justify-content-between">
      <button type="submit" class="btn btn-success">✔️ Update</button>
      <a href="/" class="btn btn-secondary">❌ Cancel</a>
    </div>
  </form>
</div>



